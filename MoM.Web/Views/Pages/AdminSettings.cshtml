<mom-admin-settings class="container-fluid">
    <h1>Settings</h1>
    <tabset>
        <tab>
            <template tab-heading>
                <i class="fa fa-home mom-icon"></i><span>Site</span>
            </template>
            <div class="container-fluid margin-top margin-bottom">
                <form *ngIf="!isLoading" (ngSubmit)="onSaveSiteSettings()" #postForm="ngForm">
                    <div class="form-group row">
                        <label for="inputTitle" class="col-sm-2 form-control-label">Title</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" [(ngModel)]="siteSettings.Title" required id="inputTitle" ngControl="title" #title="ngForm" placeholder="Title">
                            <div [hidden]="title.valid || title.pristine" class="alert alert-danger">Title is required</div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="button" class="btn btn-primary" (click)="onCancel()">Cancel</button>
                            <button type="submit" class="btn btn-success" [disabled]="!postForm.form.valid">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
        </tab>
        <tab>
            <template tab-heading>
                <i class="fa fa-database mom-icon"></i>
                <span>Database</span>
            </template>
            <div class="container-fluid margin-top margin-bottom">
                Database content
            </div>                
        </tab>
        <tab>
            <template tab-heading>
                <i class="fa fa-paint-brush mom-icon"></i><span>Themes</span>
            </template>
            <div class="container-fluid margin-top margin-bottom">
                Themes content
            </div>   
        </tab>
        <tab>
            <template tab-heading>
                <i class="fa fa-envelope-o mom-icon"></i>
                <span>Messages</span>
            </template>
            <div class="container-fluid margin-top margin-bottom">
                <form *ngIf="!isLoading" (ngSubmit)="onSaveSiteSettings()" #postForm="ngForm">
                    <div class="form-group row">
                        <label for="inputEmailHostName" class="col-sm-2 form-control-label">HostName</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" [(ngModel)]="siteSettings.Email.HostName" required id="inputEmailHostName" ngControl="emailHostName" #emailHostName="ngForm" placeholder="HostName">
                            <div [hidden]="emailHostName.valid || emailHostName.pristine" class="alert alert-danger">Email hostname is required</div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="inputEmailPort" class="col-sm-2 form-control-label">Port</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" [(ngModel)]="siteSettings.Email.Port" required id="inputEmailPort" ngControl="emailPort" #emailPort="ngForm" placeholder="Port">
                            <div [hidden]="emailPort.valid || emailPort.pristine" class="alert alert-danger">Port is required</div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-10 col-sm-offset-2">
                            <button type="button" class="btn btn-primary"
                                    [(ngModel)]="siteSettings.Email.UseSSL" btnCheckbox>
                                Use SSL
                            </button>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-10 col-sm-offset-2">
                            <button type="button" class="btn btn-primary"
                                    [(ngModel)]="siteSettings.Email.RequireCredentials" btnCheckbox>
                                Require credentials
                            </button>
                        </div>
                    </div>
                    <div class="form-group row" *ngIf="siteSettings.Email.RequireCredentials">
                        <label for="inputEmailUserName" class="col-sm-2 form-control-label">Username</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" [(ngModel)]="siteSettings.Email.UserName" required id="inputEmailUserName" ngControl="emailUserName" #emailUserName="ngForm" placeholder="UserName">
                            <div [hidden]="emailUserName.valid || emailUserName.pristine" class="alert alert-danger">Username is required</div>
                        </div>
                    </div>
                    <div class="form-group row" *ngIf="siteSettings.Email.RequireCredentials">
                        <label for="inputEmailPassword" class="col-sm-2 form-control-label">Password</label>
                        <div class="col-sm-10">
                            <input type="password" class="form-control" [(ngModel)]="siteSettings.Email.Password" required id="inputEmailPassword" ngControl="emailPassword" #emailPassword="ngForm" placeholder="Password">
                            <div [hidden]="emailPassword.valid || emailPassword.pristine" class="alert alert-danger">Password is required</div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="button" class="btn btn-primary" (click)="onCancel()">Cancel</button>
                            <button type="submit" class="btn btn-success" [disabled]="!postForm.form.valid">Submit</button>
                        </div>
                    </div>
                </form>
            </div>     
        </tab>
        <tab>
            <template tab-heading>
                <i class="fa fa-search mom-icon"></i>
                <span>Search</span>
            </template>
            <div class="container-fluid margin-top margin-bottom">
                Search content
            </div>   
        </tab>
        <tab>
            <template tab-heading>
                <i class="fa fa-tachometer mom-icon"></i>
                <span>Performance</span>
            </template>
            <div class="container-fluid margin-top margin-bottom">
                Performance content
            </div> 
        </tab>
    </tabset>
</mom-admin-settings>